<html t:type="layoutAdmin" title="literal:Configuration"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd"
      xmlns:p="tapestry:parameter">
	<head>
	
	</head>
	<body> <t:form>
		
			<div>
				Чөлөө хүсэх төрөл : 
				<t:textfield value="vacationType.vacationTypeName" t:validate="required"/> &nbsp;
				<t:submit t:id="save" t:value="${message:save}" class="btnFind save"/>
			</div><br/>
			<div>
				<t:grid t:source="listVacationType" t:row="valueVacationType" t:include="vacationTypeName" 
				reorder="number" t:add="number,edit,delete" rowsPerPage="15" >
					<p:numberCell>
						${number}
					</p:numberCell>	
					<p:editCell>
						<t:actionlink t:id="edit" t:context="valueVacationType">
							<img src="${editIcon}"/>
						</t:actionlink>
					</p:editCell>
					<p:deleteCell>
						<t:actionlink t:id="delete" t:context="valueVacationType">
							<img src="${deleteIcon}"/>
						</t:actionlink>
					</p:deleteCell>
				</t:grid> 
			</div>
		
	</t:form> </body> 
</html>
